function submitForm() {
    const phone = document.getElementById("phone").value.trim();
    const email = document.getElementById("email").value.trim();
    const errorBox = document.getElementById("errorBox");

    // Reset message
    errorBox.innerHTML = "";

    // --------------------------
    // PHONE VALIDATION
    // --------------------------
    if (phone.length < 10) {
        errorBox.innerHTML = "ðŸ“± Phone number must contain at least 10 digits.";
        return;
    }

    if (!/^[0-9]+$/.test(phone)) {
        errorBox.innerHTML = "ðŸ“± Phone number must contain digits only.";
        return;
    }

    // --------------------------
    // EMAIL VALIDATION
    // --------------------------
    const emailPattern = /^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$/;

    if (!emailPattern.test(email)) {
        errorBox.innerHTML = "âœ‰ï¸ Please enter a valid email address.";
        return;
    }

    // --------------------------
    // IF VALID â€” SHOW WHEEL
    // --------------------------
    document.getElementById("formBox").style.display = "none";
    document.getElementById("wheelBox").style.display = "block";
}
